@model Slider
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="row">
			<div class="form-group col-md-4">
				<label asp-for="Title">Title</label>
				<input class="form-control" asp-for="Title" placeholder="Enter Title">
				<span asp-validation-for="Title"></span>
			</div>
			<div class="form-group col-md-4">
				<label asp-for="SubTitle">SubTitle</label>
				<input class="form-control" asp-for="SubTitle" placeholder="Enter SubTitle">
				<span asp-validation-for="SubTitle"></span>
			</div>
			<div class="form-group col-md-4">
				<label asp-for="File">ImgUrl</label>
				<input class="form-control" asp-for="File" placeholder="Enter ImgUrl">
				<span asp-validation-for="File"></span>
			</div>
        
        </div>
		<div class="row">
		<div class="form-group col-md-4">
			<label asp-for="Description">Description</label>
			<textarea class="form-control" asp-for="Description" placeholder="Enter Description"></textarea>
			<span asp-validation-for="Description"></span>
		</div>
		</div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>