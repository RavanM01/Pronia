@using ProniaTask.Services
@inject LayoutService layoutservice

@model Dictionary<string, string>
@{
    int count = 0;
}

<h1>Settins</h1>
<a class="btn btn-primary ml-5 mb-3" asp-action="Create">Create</a>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">Key</th>
            <th scope="col">Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th scope="row">@count</th>
                <td>@item.Key</td>
                <td>@item.Value</td>
                <td>
                    <a class="btn btn-secondary" asp-action="Update" asp-route-key=@item.Key>Update</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-key=@item.Key>Delete</a>
                </td>
            </tr>


        }
    </tbody>
</table>